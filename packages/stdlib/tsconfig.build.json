{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "build/esm",
        "declarationDir": "build/dts",
        "target": "ES2021",
        "module": "ES6",
        "moduleResolution": "Node",
        "incremental": true,
        "tsBuildInfoFile": "build/tsbuildinfo/esm.tsbuildinfo",
        "declaration": true,
        "declarationMap": true,
        "removeComments": false,
        "tsPlusConfig": "../../tsplus.config.json",
        "composite": true,
        "rootDir": "./src"
    },
    "include": [
        "src/**/*.ts"
    ]
}
