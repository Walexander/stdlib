{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-watch",
            "type": "shell",
            "command": "yarn build-watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "isBackground": true,
            "presentation": {
                "focus": false,
                "panel": "shared",
                "group": "dev",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "test-watch",
            "dependsOn": [
                "build-watch"
            ],
            "type": "shell",
            "command": "yarn test",
            "problemMatcher": {
                "owner": "custom",
                "pattern": [
                    {
                        "regexp": "^PATTERN WON'T MATCH, BUT NEEDED TO BE A VALID PROBLEM MATCHER$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
            }
        }
    ]
}
