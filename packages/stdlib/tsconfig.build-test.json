{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "build/tests",
        "declarationDir": "build/tests-dts",
        "target": "ES2021",
        "module": "ES6",
        "moduleResolution": "Node",
        "incremental": true,
        "tsBuildInfoFile": "build/tsbuildinfo/tests.tsbuildinfo",
        "declaration": true,
        "declarationMap": true,
        "removeComments": false,
        "tsPlusConfig": "../../tsplus.config.json",
        "composite": true,
        "rootDir": "test"
    },
    "include": [
        "test/**/*.ts"
    ],
    "files": [
        "./global.d.ts"
    ],
    "references": [
        {
            "path": "./tsconfig.build.json"
        }
    ]
}
