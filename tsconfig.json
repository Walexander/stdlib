{
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "target": "ES2020",
        "module": "ESNext",
        "outDir": "dist/esm",
        "declarationDir": "dist/dts",
        "incremental": true,
        "tsBuildInfoFile": "dist/.tsbuildinfo",
        "skipLibCheck": true,
        "tsPlusModuleDiscoveryLocalSuffix": "js",
        "tsPlusTracingPackageName": "@tsplus/stdlib"
    },
    "include": [
        "src/**/*.ts"
    ]
}